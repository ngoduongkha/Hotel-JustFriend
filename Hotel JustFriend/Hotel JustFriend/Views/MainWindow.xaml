<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_JustFriend.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" x:Class="Hotel_JustFriend.Views.MainWindow"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen"
        x:Name="window" DataContext="{StaticResource MainVM}"
        Title="Hotel Just Friend" Height="700" Width="1200" 
        ResizeMode="NoResize" Background="Transparent" AllowsTransparency="True">
    <Grid Background="Pink">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderBrush="{x:Null}" CornerRadius="10,10,0,0" BorderThickness="0"
                Background="Pink" Grid.Row="0">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonDown">
                    <i:InvokeCommandAction Command="{Binding MouseMoveWindowCommand}" CommandParameter="{Binding ElementName=window}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Grid Background="{x:Null}" Height="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Label Content="{Binding Title, ElementName=window}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Foreground="WhiteSmoke"
                        FontSize="25" FontWeight="Bold"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.Resources>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Width" Value="50"/>
                                <Setter Property="Margin" Value="0,0,0,20"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="2"
                        ToolTip="Thoát"
                        Command="{Binding CloseWindowCommand}"
                        CommandParameter="{Binding ElementName=window}">
                            <materialDesign:PackIcon Kind="WindowClose" Width="25" Height="25" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        <!--<Button Grid.Column="1"
                        ToolTip="Phóng to"
                        Command="{Binding MaximizeWindowCommand}"
                        CommandParameter="{Binding ElementName=window}">
                            <materialDesign:PackIcon Kind="WindowMaximize" Width="25" Height="25" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>-->
                        <Button Grid.Column="0"
                        ToolTip="Thu gọn"
                        Command="{Binding MinimizeWindowCommand}"
                        CommandParameter="{Binding ElementName=window}">
                            <materialDesign:PackIcon Kind="WindowMinimize" Width="25" Height="25" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <Border BorderBrush="{x:Null}" Background="Pink" BorderThickness="0.1" 
                CornerRadius="0,0,10,10" Grid.Row="1">
            <Grid Background="{x:Null}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="750"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border Background="White" Grid.Column="0" BorderThickness="0.1" CornerRadius="0,0,0,10">
                    <WrapPanel>
                        <Button Height="80" Width="100" Content="Phòng 1.1" Margin="10"></Button>
                        <Button Height="80" Width="100" Content="Phòng 1.2" Margin="10"></Button>
                        <Button Height="80" Width="100" Content="Phòng 1.3" Margin="10"></Button>
                        <Button Height="80" Width="100" Content="Phòng 1.4" Margin="10"></Button>
                    </WrapPanel>
                </Border>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Content="Phòng được chọn nè" 
                           HorizontalAlignment="Center" FontSize="30"
                           Foreground="White" FontWeight="SemiBold"
                           Margin="10,10,10,20" Grid.Row="0"></Label>
                    <Grid Background="White" Margin="5" Grid.Row="1">
                        <ListView Height="400">
                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn Header="STT" Width="Auto"></GridViewColumn>
                                        <GridViewColumn Header="Tên dịch vụ" Width="Auto"></GridViewColumn>
                                        <GridViewColumn Header="Số lượng" Width="Auto"></GridViewColumn>
                                        <GridViewColumn Header="Giá" Width="Auto"></GridViewColumn>
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel HorizontalAlignment="Left" Width="150" Grid.Column="0">
                            <Button Content="Dịch vụ" Width="125" Margin="10"></Button>
                            <Button Content="Chi tiết" Width="125" Margin="10"></Button>
                            <Button Content="Chuyển phòng" Width="125" Margin="10"></Button>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Margin="10" Width="125" Content="Sửa phòng" Grid.Column="0"/>
                                <Button Margin="10" Width="125" Content="Cho thuê" Grid.Column="1"/>
                            </Grid>
                            <Grid>
                                <Label Content="Tổng tiền:" FontSize="20" Margin="10" FontWeight="Bold"/>
                            </Grid>
                            <Button Content="Thanh toán" Width="125" Margin="10"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
