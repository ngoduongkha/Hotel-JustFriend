<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_JustFriend.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" x:Class="Hotel_JustFriend.Views.MainWindow"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen"
        x:Name="window" DataContext="{StaticResource MainVM}"
        Title="Hotel Just Friend" Height="700" Width="1200" 
        ResizeMode="NoResize" Background="{x:Null}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderBrush="{x:Null}" CornerRadius="10,10,0,0" BorderThickness="0"
                Background="Pink" Grid.Row="0">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonDown">
                    <i:InvokeCommandAction Command="{Binding MouseMoveWindowCommand}" CommandParameter="{Binding ElementName=window}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Grid Background="{x:Null}" Height="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Label Content="{Binding Title, ElementName=window}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Foreground="WhiteSmoke"
                        FontSize="25" FontWeight="Bold"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.Resources>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Width" Value="50"/>
                                <Setter Property="Margin" Value="0,0,0,20"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="2"
                        ToolTip="Thoát"
                        Command="{Binding CloseWindowCommand}"
                        CommandParameter="{Binding ElementName=window}">
                            <materialDesign:PackIcon Kind="WindowClose" Width="25" Height="25" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        <Button Grid.Column="1"
                        ToolTip="Phóng to"
                        Command="{Binding MaximizeWindowCommand}"
                        CommandParameter="{Binding ElementName=window}">
                            <materialDesign:PackIcon Kind="WindowMaximize" Width="25" Height="25" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        <Button Grid.Column="0"
                        ToolTip="Thu gọn"
                        Command="{Binding MinimizeWindowCommand}"
                        CommandParameter="{Binding ElementName=window}">
                            <materialDesign:PackIcon Kind="WindowMinimize" Width="25" Height="25" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <Grid Background="White" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Background="White" BorderBrush="White" 
                    BorderThickness="0" CornerRadius="0,0,0,10" Grid.Column="0">
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="materialDesign:PackIcon">
                            <Setter Property="Foreground" Value="#ffbada"/>
                            <Setter Property="Height" Value="50"/>
                            <Setter Property="Width" Value="40"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </Grid.Resources>
                    <StackPanel Width="55">
                        <Grid Height="80" Background="White"/>
                        <Grid Background="#ff73b4">
                            <ListView x:Name="lsvMenu" Foreground="#ffd6e4" Width="55">
                                <ListViewItem x:Name="itemHome" Height="60" Width="55">
                                    <materialDesign:PackIcon Kind="Home" ToolTip="Giao diện chính"/>
                                </ListViewItem>
                                <ListViewItem x:Name="itemRoom" Height="60" Width="55">
                                    <materialDesign:PackIcon Kind="Hotel" ToolTip="Quản lý phòng"/>
                                </ListViewItem>
                            </ListView>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
            <Border Background="White" BorderBrush="{x:Null}" 
                    BorderThickness="0.1" CornerRadius="0,0,10,0" Grid.Column="1">
                <Grid x:Name="gridMain"/>
            </Border>
        </Grid>
    </Grid>
</Window>
