<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_JustFriend.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" x:Class="Hotel_JustFriend.Views.MainWindow"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen"
        x:Name="window" DataContext="{StaticResource MainVM}"
        Title="Hotel Just Friend" Height="500" Width="900" 
        ResizeMode="NoResize" Background="{x:Null}">
    <Window.Resources>
        <Storyboard x:Key="MenuOpen">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="gridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="200"/>
            </DoubleAnimationUsingKeyFrames>
            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                            Storyboard.TargetName="borderMain" To="#e8e8e8" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="MenuClose">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="gridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                            Storyboard.TargetName="borderMain" To="White" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="btnOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource MenuOpen}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="btnCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource MenuClose}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border BorderBrush="{x:Null}" CornerRadius="10,10,0,0" BorderThickness="0.1"
                Background="Pink" Grid.Row="0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding MouseMoveWindowCommand}" CommandParameter="{Binding ElementName=window}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Grid Background="{x:Null}" Height="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Button Height="40" HorizontalAlignment="Right"
                                    Width="45" Background="{x:Null}" BorderBrush="{x:Null}"
                                    x:Name="btnOpenMenu" Padding="0"
                                    Command="{Binding MenuOpenCommand}"
                                    CommandParameter="{Binding ElementName=borderMain}">
                                <materialDesign:PackIcon Kind="Menu" Foreground="Black" 
                                                         Width="45" Height="30" 
                                                         VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Label Content="{Binding Title, ElementName=window}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Foreground="WhiteSmoke"
                        FontSize="25" FontWeight="Bold"/>
                        </Grid>
                        <Grid Grid.Column="2">
                            <Grid.Resources>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Width" Value="50"/>
                                    <Setter Property="Margin" Value="0,0,0,20"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="2"
                        ToolTip="Thoát"
                        Command="{Binding CloseWindowCommand}"
                        CommandParameter="{Binding ElementName=window}">
                                <materialDesign:PackIcon Kind="WindowClose" Width="25" Height="25" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Button>
                            <Button Grid.Column="1"
                        ToolTip="Phóng to"
                        Command="{Binding MaximizeWindowCommand}"
                        CommandParameter="{Binding ElementName=window}">
                                <materialDesign:PackIcon Kind="WindowMaximize" Width="25" Height="25" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Button>
                            <Button Grid.Column="0"
                        ToolTip="Thu gọn"
                        Command="{Binding MinimizeWindowCommand}"
                        CommandParameter="{Binding ElementName=window}">
                                <materialDesign:PackIcon Kind="WindowMinimize" Width="25" Height="25" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
            <Border BorderBrush="{x:Null}" CornerRadius="0,0,10,10" BorderThickness="0.1"
                    Background="White" Grid.Row="1" x:Name="borderMain">
            </Border>
        </Grid>
        <Grid Width="0" HorizontalAlignment="Left" Background="{x:Null}" x:Name="gridMenu">
            <Border BorderBrush="{x:Null}" CornerRadius="10,0,0,10" BorderThickness="0.1"
                    Background="White">
                <StackPanel>
                    <Grid Height="48">
                        <Button Height="40" HorizontalAlignment="Right"
                            Width="45" Background="{x:Null}" BorderBrush="{x:Null}"
                            x:Name="btnCloseMenu" Padding="0"
                            Command="{Binding MenuCloseCommand}" CommandParameter="{Binding ElementName=borderMain}">
                            <materialDesign:PackIcon Kind="ArrowLeft" Foreground="Black" 
                                                 Width="45" Height="30" 
                                                 VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>

</Window>
