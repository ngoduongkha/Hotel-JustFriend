<UserControl x:Class="Hotel_JustFriend.Views.ProductManageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_JustFriend.Views"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="651.2" d:DesignWidth="1200"
             x:Name="uc">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" HorizontalAlignment="Right" Width="810">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <materialDesign:Card Grid.Column="0" Margin="10">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Search" Margin="5,2"
                                                     Height="23" Width="20"
                                                     VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                        <TextBox materialDesign:HintAssist.Hint="Tìm phòng" Width="150"
                                      FontSize="15" Background="Transparent"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                        </TextBox>
                        <Button Content="Tìm"
                                VerticalAlignment="Bottom"
                                Margin="10,0" Height="25" FontSize="15" Width="60"
                                Padding="15,0" Background="#fa91d7" BorderBrush="#fa91d7"
                                materialDesign:ButtonAssist.CornerRadius="10"/>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card Grid.Column="1" Margin="10">
                    <StackPanel Grid.Column="1" Margin="10" Orientation="Horizontal">
                        <Label Content="Bộ lọc: " FontSize="17"
                                   VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                        <ComboBox
                            x:Name="txtFilterStatus"
                            ItemsSource="{Binding ListRoomStatus}"
                            materialDesign:HintAssist.Hint="Trạng thái"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                            VerticalAlignment="Bottom"
                            Margin="10,0" FontSize="15">
                        </ComboBox>
                        <ComboBox
                            x:Name="txtFilterType"
                            ItemsSource="{Binding ListRoomType}"
                            materialDesign:HintAssist.Hint="Loại phòng"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                            VerticalAlignment="Bottom"
                            Margin="10,0" FontSize="15">
                        </ComboBox>
                        <Button
                            Content="Lọc" VerticalAlignment="Bottom"
                            Margin="10,0" Height="25" FontSize="15" Width="60"
                            Padding="15,0" Background="#fa91d7" BorderBrush="#fa91d7"
                            materialDesign:ButtonAssist.CornerRadius="100"
                            Command="{Binding RoomFilterCommand}"
                            CommandParameter="{Binding ElementName=RoomManageUC}"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
            <materialDesign:Card Grid.Row="1">
                <materialDesign:Card Height="200" Width="150">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="140"/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid
                            x:Name="gridVisible"
                            Visibility="Hidden"
                            Grid.Row="0">
                            <materialDesign:PackIcon
                                Width="50" Height="50"
                                Kind="Edit"/>
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                        <Grid Grid.Row="0">
                            <Grid.Background>
                                <ImageBrush ImageSource="/Hotel JustFriend;component/Resources/Images/banner.png"/>
                            </Grid.Background>
                        </Grid>                        
                        <TextBlock
                            Grid.Row="1"
                            Text="Tên"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            TextAlignment="Center"
                            FontSize="15"/>
                        <TextBlock
                            Grid.Row="2"
                            Text="Số lượng"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            TextAlignment="Center"
                            FontSize="15"/>
                    </Grid>
                </materialDesign:Card>
            </materialDesign:Card>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <materialDesign:Card Grid.Row="0"
                                 Margin="5">
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="Label">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="FontSize" Value="18"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Số phòng:" Grid.Column="0"
                               Margin="15" FontWeight="Bold"/>
                        <Label Content="13" Grid.Column="1"
                               Margin="30,0" FontWeight="SemiBold"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Loại phòng:" Grid.Column="0"
                               Margin="15" FontWeight="Bold"/>
                        <Label Content="VIP" Grid.Column="1"
                               Margin="30,0" FontWeight="SemiBold"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Trạng thái:" Grid.Column="0"
                               Margin="15" FontWeight="Bold"/>
                        <Label Content="Còn trống" Grid.Column="1"
                               Margin="30,0" FontWeight="SemiBold"/>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Đơn giá:" Grid.Column="0"
                               Margin="15" FontWeight="Bold"/>
                        <Label Content="1000000" Grid.Column="1"
                               Margin="30,0" FontWeight="SemiBold"/>
                    </Grid>
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Ghi chú:" Grid.Column="0"
                               Margin="15" FontWeight="Bold"/>
                        <Label Content="Fuck you Kha" Grid.Column="1"
                               Margin="30,0" FontWeight="SemiBold"/>
                    </Grid>
                </Grid>
            </materialDesign:Card>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Margin="10,20"
                        Content="Thêm" FontWeight="SemiBold" FontSize="15"
                        VerticalAlignment="Top" Foreground="Black"
                        Background="#9df587" BorderBrush="#9df587"
                        Width="90" Height="50"
                        Command="{Binding AddProductCommand}"
                        materialDesign:ButtonAssist.CornerRadius="10"/>
                <Button Grid.Column="1" Margin="10,20"
                        Content="Xóa" FontWeight="SemiBold" FontSize="15"
                        VerticalAlignment="Top" Foreground="Black"
                        Background="#ff9494" BorderBrush="#ff9494"
                        Width="90" Height="50"
                        Command="{Binding DeleteRoomCommand}"
                        IsEnabled="{Binding IsEditable}"
                        materialDesign:ButtonAssist.CornerRadius="10"/>
                <Button Grid.Column="2" Margin="10,20"
                        Content="Sửa" FontWeight="SemiBold" FontSize="15"
                        VerticalAlignment="Top" Foreground="Black"
                        Background="#faf896" BorderBrush="#faf896"
                        Width="90" Height="50"
                        IsEnabled="{Binding IsEditable}"
                        materialDesign:ButtonAssist.CornerRadius="10"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
