<UserControl x:Class="Hotel_JustFriend.Views.RoomManageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_JustFriend.Views"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="651.2" d:DesignWidth="1200"
             x:Name="RoomManageUC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <materialDesign:Card>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon 
                        Margin="20 0 5 0"
                        Kind="Search"
                        Height="24" Width="24"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"/>
                    <TextBox
                        Margin="5 0 10 0"
                        materialDesign:HintAssist.Hint="Tìm phòng"
                        FontSize="15" Background="Transparent"
                        MaxLength="50"
                        MaxWidth="250"
                        Width="250"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"/>
                    <Button
                        Content="Tìm"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Margin="10 0 20 0"
                        Width="70"
                        Height="35"
                        FontSize="15"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                        materialDesign:ButtonAssist.CornerRadius="5"/>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card Margin="10 0 10 0">
                <StackPanel Orientation="Horizontal">
                    <ComboBox
                        x:Name="txtFilterStatus"
                        ItemsSource="{Binding ListRoomStatus}"
                        materialDesign:HintAssist.Hint="Trạng thái"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Width="150"
                        Margin="20 0 10 0"/>
                    <ComboBox
                        x:Name="txtFilterType"
                        ItemsSource="{Binding ListRoomType}"
                        materialDesign:HintAssist.Hint="Loại phòng"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Width="150"
                        Margin="10 0 10 0"/>
                    <Button
                        Content="Lọc"
                        Margin="10 0 20 0" FontSize="15"
                        Width="70"
                        Height="35"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding RoomFilterCommand}"
                        CommandParameter="{Binding ElementName=RoomManageUC}"/>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
        <Grid Grid.Row="1">
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="120"/>
                        <Setter Property="Height" Value="80"/>
                        <Setter Property="Margin" Value="10"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard Storyboard.TargetProperty="Background.Color">
                                            <ColorAnimation To="WhiteSmoke" Duration="0"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard Storyboard.TargetProperty="Background.Color">
                                            <ColorAnimation To="Pink" Duration="0"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <materialDesign:Card Margin="10">
                    <ListView
                        x:Name="mainListView"
                        ItemsSource="{Binding ListRoom}"
                        SelectedItem="{Binding SelectedRoom}">
                        <ListView.ItemContainerStyle>
                            <Style
                                TargetType="ListViewItem"
                                BasedOn="{StaticResource MaterialDesignGridViewItem}">
                                <Setter 
                                    Property="HorizontalAlignment"
                                    Value="Stretch"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Header="Tầng" Width="Auto">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="Black" Margin="0,5,0,1"
                                                    BorderThickness="0,0,0,1" >
                                                <TextBlock
                                                Text="{Binding floor}"
                                                HorizontalAlignment="Center"
                                                Background="Green"
                                                    TextAlignment="Center"
                                                    Width="100"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Số phòng" Width="Auto"
                                                DisplayMemberBinding="{Binding number}"/>
                                <GridViewColumn Header="Tên phòng" Width="Auto"
                                                DisplayMemberBinding="{Binding displayName}"/>
                                <GridViewColumn Header="Loại phòng" Width="Auto"
                                                DisplayMemberBinding="{Binding type}"/>
                                <GridViewColumn Header="Trạng thái" Width="Auto"
                                                DisplayMemberBinding="{Binding status}"/>
                                <GridViewColumn Header="Đơn giá" Width="Auto"
                                                DisplayMemberBinding="{Binding price, StringFormat=\{0:n0\}}"/>
                                <GridViewColumn Header="Ghi chú" Width="Auto"
                                                DisplayMemberBinding="{Binding note}"/>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <materialDesign:PackIcon
                                                Kind="EditOutline"
                                                Foreground="Green"
                                                Width="50"
                                                Height="50"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <materialDesign:PackIcon
                                                Kind="TrashCanOutline"
                                                Foreground="Red"
                                                Width="50"
                                                Height="50"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction
                                    Command="{Binding SelectedChangedCommand}"
                                    CommandParameter="{Binding ElementName=mainListView}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListView>
                </materialDesign:Card>
            </Grid>
        </Grid>
